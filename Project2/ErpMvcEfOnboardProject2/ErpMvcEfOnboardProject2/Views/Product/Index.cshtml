@model ErpMvcEfOnboardProject2.Models.Product
@{
    ViewBag.Title = "Index";
}

<div>
    <div class="container">
        <h2>Product Record</h2>
        <!-- Trigger the modal with a button -->
        <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModalCreate">Add Product</button>

        <!--Customer table-->
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>
                        Product Name
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Edit
                    </th>
                    <th>
                        Delete
                    </th>
                </tr>
            </thead>
            <tbody class="tbody"></tbody>
        </table>

        <!-- Modal --><!-- pup-up window for creating Product -->
        <div class="modal fade" id="myModalCreate" role="dialog">
            <div class="modal-dialog">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <!--the x button at the upper right corner of the pop-up window for closing the pop-up window-->
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Add Product</h4>
                    </div>
                    <div class="modal-body">
                        <form>
                            @*<div class="form-group">
                                <label for="Id">Id</label>
                                <input type="text" class="form-control" id="Id" placeholder="Id" disabled="disabled" />
                            </div>*@
                            <div class="form-group">
                                <label for="ProductName">Product Name</label>
                                <input type="text" class="form-control" id="ProductName" placeholder="Product Name" />
                            </div>
                            <div class="form-group">
                                <label for="Price">Price</label>
                                <input type="text" class="form-control" id="Price" placeholder="Price" />
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-success" id="btnAdd" onclick="return Add();">Create</button>
                        @*<button type="button" class="btn btn-success" id="btnUpdate" " onclick="Update();">Update</button>*@
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>
                <!-- Modal content-->
            </div>
        </div>
        <!-- Modal --><!-- pup-up window for creating product -->


        <!-- Modal --><!-- pup-up window for editing product -->
        <div class="modal fade" id="myModalEdit" role="dialog">
            <div class="modal-dialog">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <!--the x button at the upper right corner of the pop-up window for closing the pop-up window-->
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Edit Product</h4>
                    </div>
                    <div class="modal-body">
                        <form>
                            <div class="form-group">
                                <label for="Id" style="display:none;">Id</label>
                                <input type="text" class="form-control" style="display:none;" id="IdEdit" placeholder="Id" disabled="disabled" />
                            </div>
                            <div class="form-group">
                                <label for="ProductName">Product Name</label>
                                <input type="text" class="form-control" id="ProductNameEdit" placeholder="Product Name" />
                            </div>
                            <div class="form-group">
                                <label for="Price">Price</label>
                                <input type="text" class="form-control" id="PriceEdit" placeholder="Price" />
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        @*<button type="button" class="btn btn-success" id="btnAdd" onclick="Add();">Create</button>*@
                        <button type="button" class="btn btn-success" id="btnUpdate" onclick="Update();">Update</button>
                        @*<button type="button" class="btn btn-success" id="btnUpdate" onclick="Update();">Update</button>*@
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>
                <!-- Modal content-->
            </div>
        </div>
        <!-- Modal --><!-- pup-up window for editing product -->




    </div>
</div>

@section Scripts {
    <script></script>
    @Scripts.Render("~/bundles/jqueryval")

    <script src="~/Scripts/Product.js"></script>

}
